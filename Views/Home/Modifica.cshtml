@model _5H_Zaghini_Mattia.Models.Condominio
    @{ViewData["Title"] = "Modifica";
    Condominio AggiungiCond = Model;
}

<div class="text-center">
    <h1 class="display-4">Modifica</h1>
    <form class="m-2" method="POST" asp-action="Modifica">
        <div class="form-group">
            <label asp-for="Nome">Nome condominio:</label>
            <input asp-for="Nome" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Piani">Piani:</label>
            <input asp-for="Piani" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Modifica condomini</button>
    </form>
</div>