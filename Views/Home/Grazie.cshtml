@model DBContext
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <link rel="Stylesheet" href="~/css/table.css">
    <h2>L'aggiunta dei condomini Ã¨ avvenuta con successo</h2>
    <h3>Ecco i condomini</h3>
    <h4> @Html.ActionLink("Per cancellare tutti i dati clicca qui","CancellaTutto","Home",null,null)</h4>

    <table class="table table-bordered table-striped table-sm">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Piani</th>
            </tr>
        </thead>
            
        <tbody>
            @foreach (Condominio a  in Model.Condomini)
            {
                <tr>
                    <td>@a.Nome</td> 
                    <td>@a.Piani</td> 
                    <td>@Html.ActionLink("cancella","Cancella","Home",new {id=a.CondominioId},null)</td>
                </tr>
            }
        </tbody>
    </table>
</div>